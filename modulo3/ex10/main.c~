#include <stdio.h>
#include "str_cat.h"

char * ptr1; // Apontador da primeira string
char * ptr2; // Apontador da segunda string
char * ptr3; // Apontador da terceira string

/* Concatena a string1 e a string2, numa só string (denominada string3).*/
int main(void){
	
	char string1[40] = "Isep é a melhor"; // Primeira string
	
	char string2[40] = "instituiçao do pais "; // Segunda string
	
	char string3[80] = ""; // String onde vai aparecer o resultado da junção das outras duas
	
	ptr1 = string1;
	printf("Frase 1: %s\n", ptr1);
	ptr2 = string2;
	printf("Frase 2: %s\n", ptr2);
	ptr3 = string3;
	
	str_cat(); // Função que vai concatenar a string 1 e 2
	
	printf("Frase concatenada: %s\n", ptr3); // Frase concatenada
	
	return 0;
}
